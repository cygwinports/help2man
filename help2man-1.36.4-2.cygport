DESCRIPTION="Generates man pages from program output"
HOMEPAGE="http://www.gnu.org/software/help2man/"
SRC_URI="mirror://gnu/${PN}/${P}.tar.gz
         mirror://gnu/${PN}/${P}.tar.gz.sig"

src_compile() {
	cd ${S}
	cygautoreconf
	cd ${B}
	cygconf --disable-nls
	cygmake
}

src_install() {
	cd ${B}
	cyginstall install_l10n
}
